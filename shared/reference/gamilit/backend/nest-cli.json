{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false,
    "tsConfigPath": "tsconfig.json",
    "assets": [
      {
        "include": "**/*.json",
        "outDir": "dist"
      }
    ],
    "watchAssets": true
  },
  "generateOptions": {
    "spec": true,
    "flat": false
  },
  "monorepo": false,
  "root": ".",
  "projects": {}
}
